<h1>Edit Your Profile</h1>

<h1>Hi <%= @user.name %>!</h1>
<%= form_for(@user) do |f| %>

<label>What do you consider yourself?</label> <br>
<select for="user_type" name="user[role_id]">
	<% @roles.each do |r| %>
		<option class="user_type" type="text"  <%= "selected" if @user.role.id == r.id %> value="<%= r.id%>"><%= r.name %></option>
	<% end %>
</select>
<br>
<label>Name: </label>
<input type="text" name="user[name]" value='<%= @user.name %>'>

<label>Title: </label>
<input type="text" value="<%= @user.title %>" name="user[title]">

<label>Email: </label>
<input type="text" name="user[email]" value='<%= @user.email %>'>
<br><br>

<label>Industry: </label>
<select id="user_industry" for="user_industry" name="user[industry_id]">
  <% @industries.each do |i| %>
     <option class="user_industry" <%= "selected" if @user.industry.id == i.id %> value="<%= i.id%>" value="<%=i.id%>">
     	<%= i.name %>
     </option>
  <% end %>
</select>

<label>Location: </label>
<select for="user_location" name="user[job_location_id]">
	<%  @locations.each do |l| %>
		<option  class="user_availability"  <%= "selected" if @user.job_location_id == l.id %> type="type" value="<%= l.id %>"><%= l.city %></option>
	<% end %>
</select>

<label>Years of Experience: </label>
<input type="number" value="<%= @user.years_experience %>" name="user[years_experience]" min="0" max="50">

<br><br>
<input type="text" size="100" name="user[bio]" value="<%= @user.bio %>" placeholder="Insert a short description of yourself. Where did you grow up? What is your professional background? What are passionate about? Don't be shy!">

<br><br>
<input type="text" size="100" name="user[fun_fact]" value="<%= @user.fun_fact %>" placeholder="Fun fact about yourself">

<br><br>
<input type="text" size="100" name="user[interests]" value="<%= @user.interests %>" placeholder="Interests">
<br>
<br>

<label for="user_skill">Skills: </label><br>
	<% @skills.each do |s| %>
		<input class="user[skill]" multiple ="true" name="user[skill_id][]" type="checkbox" <%= "checked" if @user.skill_id == s.id %> value="<%= s.id %>">
	<%= s.name %>
</input>

<br>

<% end %>
<br>
<label>Availability: </label>
<select for="availability" name="user[availability_id]">
	<% @avails.each do |a| %>
	<option  class="user_availability" type="type" <%= "selected" if @user.availability.id == a.id %> value="<%= a.id %>">
		<%= a.name %>
	</option>
	<br>
	<% end %>
</select>
<br>  

<div id="change-password">
  <label>Change password: </label>
 
  <%= f.password_field :password, placeholder: "new password" %>
    <br/>
  <%= f.password_field :password_confirmation, placeholder: "confirm new password" %>
</div>   
<br/>
  <%= f.submit "Submit Edit" %>
  <% end %>