<% if params[:action] == "mentors" %>
	<%= stylesheet_link_tag "mentorlist.css" %>
<% else %>
	<%= stylesheet_link_tag "menteelist.css" %>
<% end %>

<div class="m-list">
	<ul class="user-grid">
	<% @users.each do |user| %>
		<li>
			<a href="/users/<%= user.id %>">
				<figure>
					<img src="<%= user.img_url %>" height="180px" width="180px" alt="pic">
						<figcaption>
							<p>
								<%= user.name %><br><%= user.title %><br><%= user.location.city if user.location %><br>
							</p>
						</figcaption>
				</figure>
			</a>
		</li>
	<% end %>
</ul>
