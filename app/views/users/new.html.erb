
<nav class="login-signup">
  <ul>
      <li>SIGN UP</li>
  </ul>
</nav>

<section class="form-signup">
  <%= form_for @user do |f| %>
    <%= f.text_field :name, placeholder: "NAME: full name" %>
    
    <br>

    <%= f.text_field :email, placeholder: "EMAIL: hi@hello.com" %>
    
    <br/>

    <%= f.password_field :password, placeholder: "PASSWORD:" %>
    
    <br/>

    <%= f.password_field :password_confirmation, placeholder: "CONFIRM PASSWORD:" %>
    
    <br/>

    <select for="user_type" name="user[role_id]">
      <option value="" disabled selected style="display:none;">ROLE:</option>
      <% @roles.each do |r| %>
        <option class="user_type" type="text" value="<%= r.id %>"><%= r.name.capitalize %></option>
      <% end %>
    </select>

    <br>

    <select for="user_type" name="user[industry_id]">
      <option value="" disabled selected style="display:none;">INDUSTRY:</option>
      <% @industries.each do |i| %>
      <option class="user_type" type="text" value="<%=i.id%>"><%= i.name %></option>
      <% end %>
    </select>
    
    <br>

    <%= f.submit "SUBMIT" %>
  <% end %>

</section>